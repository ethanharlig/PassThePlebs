{
  "manifest_version": 2,
  "name": "Pass the Plebs",
  "description": "Adds Polyratings to PASS pages",
  "version": "0.3.1",
  "background": {
    "persistent": true,
    "scripts": [
      "js/bg.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://pass.calpoly.edu/main.html"
      ],
      "js": [
        "js/jquery-3.1.1.min.js",
        "js/main.js"
      ],
      "css": [
        "css/main.css"
      ]
    }
  ],
  "options_page": "options/options.html",
  "permissions": [
    "http://polyratings.com/",
    "activeTab",
    "storage"
  ]
}