{
  "name": "pass-the-plebs",
  "version": "0.5.0",
  "description": "Pass the Plebs (Chrome Extension)",
  "author": "Tim Stoddard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timstoddard/PassThePlebs"
  },
  "main": "js/index.js",
  "scripts": {
    "build": "npm run pack-files && npm run refresh-ext && npm run zip-dist",
    "pack-files": "rimraf dist/bundle && rimraf PassThePlebs.zip && webpack -p --config ./webpack.config.js",
    "refresh-ext": "chrome-cli open chrome://extensions && chrome-cli reload && chrome-cli close && chrome-cli reload",
    "zip-dist": "bestzip PassThePlebs.zip dist/*",
    "lint": "eslint ./index.js && eslint js/*.js",
    "postinstall": "brew install chrome-cli"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel": "^6.5.2",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.16.0",
    "bestzip": "^1.1.3",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.10.1",
    "postcss-loader": "^0.13.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  }
}