{
  "name": "pass-the-plebs",
  "version": "0.8.1",
  "description": "Pass the Plebs (Chrome extension for pass.calpoly.edu)",
  "author": "Tim Stoddard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timstoddard/PassThePlebs"
  },
  "main": "src/extension/js/index.js",
  "scripts": {
    "build": "rimraf dist* && npm run pack-files && npm run refresh-ext && zip -r dist.zip dist",
    "pack-files": "webpack -p --config webpack/config.js && npm run move-files",
    "move-files": "cp src/manifest.json dist && mkdir dist/icons && cp media/icons/*.png dist/icons",
    "refresh-ext": "chrome-cli open chrome://extensions && chrome-cli reload && chrome-cli close && chrome-cli reload",
    "lint": "eslint src/**/*.js",
    "postinstall": "brew install chrome-cli"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel": "^6.5.2",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.16.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.26.0",
    "jquery": "^3.1.1",
    "node-sass": "^3.10.1",
    "postcss-loader": "^0.13.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-regex": "^4.0.0",
    "webpack": "^1.13.2"
  }
}