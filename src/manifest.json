{
  "manifest_version": 2,
  "name": "Pass the Plebs",
  "short_name": "Pass the Plebs",
  "version": "0.6.2",
  "version_name": "beta",
  "description": "Adds Polyratings (and much more) to PASS!",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "author": "Tim Stoddard",
  "background": {
    "persistent": true,
    "scripts": [
      "bundle/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://pass.calpoly.edu/main.html"
      ],
      "js": [
        "bundle/jquery-3.1.1.min.js",
        "bundle/index.js"
      ],
      "css": [
        "bundle/index.css"
      ]
    }
  ],
  "incognito": "split",
  "offline_enabled": true,
  "options_page": "options/index.html",
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": [
    "http://polyratings.com/",
    "activeTab",
    "storage"
  ]
}